модуль counter

тип Counter = класс{
    value := 0
}

фн (c: Counter) Increase(step: Цел64): Цел64{
    c.value := c.value + step
    вернуть c.value
}

фн (c: Counter) Reset(): Цел64{
    пусть value := c.value
    c.value := 0
    вернуть value
}

